<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:questionindex="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_blue"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:text="提示"
            android:textColor="@color/main_white" />

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/dialog_close" />
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
       	android:paddingRight="10dp"
       	android:paddingLeft="10dp"
        android:baselineAligned="false"
        android:background="@drawable/repeat_bg3"
        android:layout_height="100dp">
        
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            
            <ImageView 
	            android:id="@+id/dialog_message_icon"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:scaleType="fitXY"
	            android:layout_centerInParent="true"
	            android:src="@drawable/dialog_info"/>
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            
            <TextView 
	            android:id="@+id/dialog_message"
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:textSize="18sp"
	        	android:layout_alignParentLeft="true"
	        	android:layout_centerVertical="true"
	        	android:text="信息" />
            
        </RelativeLayout>
        
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp">
        
        <TextView 
            android:id="@+id/dialog_btn_1"
            android:layout_width="85dp"
        	android:layout_height="30dp"
        	android:layout_alignParentRight="true"
        	android:background="@drawable/dialog_btn_bg_shape"
        	android:layout_centerVertical="true"
        	android:layout_marginRight="10dp"
        	android:textSize="15sp"
        	android:textColor="@color/main_black"
        	android:gravity="center"
        	android:text="确定" />
        
        <TextView 
            android:id="@+id/dialog_btn_2"
        	android:layout_toLeftOf="@id/dialog_btn_1"
        	android:layout_width="85dp"
        	android:layout_height="30dp"
        	android:background="@drawable/dialog_btn_bg_shape"
        	android:layout_centerVertical="true"
        	android:textSize="15sp"
        	android:textColor="@color/main_black"
        	android:layout_marginRight="10dp"
        	android:gravity="center"
        	android:text="取消" />
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/main_gray"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
    
</LinearLayout>
    
