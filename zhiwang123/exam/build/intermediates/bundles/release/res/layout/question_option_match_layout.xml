<merge xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:questionindex="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/match_left_content"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:textSize="15sp"
        android:gravity="center"
        android:text=""
        android:background="@drawable/quesom_border_shape"
        android:textColor="@color/question_text_color"/>

    <TextView
        android:id="@+id/match_center_sepr"
        android:layout_width="20dp"
        android:layout_height="35dp"
        android:textSize="15sp"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/main_black"/>

    <TextView
        android:id="@+id/match_right_content"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:textSize="15sp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/question_text_color"
        android:background="@drawable/quesom_bg_shape"/>
    
</merge>

