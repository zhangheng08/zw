<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  
    <item>  
        <shape android:shape="rectangle">
            <solid android:color="@color/main_gray" />
            <corners android:radius="3dp" />
        </shape>  
    </item>
       
    <item  android:bottom="1px" >
        <shape android:shape="rectangle">  
            <gradient android:startColor="@color/main_white" android:endColor="@color/main_white" android:angle="270" />
            <!-- <solid android:color="@color/main_white" /> -->
            <stroke android:width="1px" android:color="@color/main_blue" />
            <corners android:radius="3dp" />
        </shape>  
    </item>  
  
</layer-list>
