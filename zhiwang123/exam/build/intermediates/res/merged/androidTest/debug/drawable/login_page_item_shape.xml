<layer-list xmlns:android="http://schemas.android.com/apk/res/android">  
  
    <item>  
        <shape android:shape="rectangle">  
            <solid android:color="#792a03" />
            <corners android:radius="3dp" />
        </shape>  
    </item>  
       
    <item  android:top="1px" android:left="0px">
        <shape android:shape="rectangle">  
            <gradient android:startColor="@color/main_yellow" android:endColor="@color/main_yellow" android:angle="270" />
            <padding android:left="5dp" android:top="3dp" android:right="5dp" android:bottom="3dp" /> 
            <corners android:radius="3dp" />
        </shape>  
    </item>  
  
</layer-list> 