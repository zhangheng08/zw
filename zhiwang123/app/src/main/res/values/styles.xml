<resources>

    <style  name="main_cell_text_style">
        <item name="android:textColor">@color/zw_gray_main_cell_txt</item>
        <item name="android:textSize">@dimen/main_cell_txt_size</item>
    </style>

    <style  name="main_cell_subtext_style">
        <item name="android:textColor">@color/zw_gray_main_cell_sub_txt</item>
        <item name="android:textSize">@dimen/main_cell_txt_sub_size</item>
    </style>

    <style name="cell_topic_style">
        <item name="android:paddingLeft">@dimen/main_cell_topic_margin_LR2</item>
        <item name="android:paddingRight">@dimen/main_cell_topic_margin_LR2</item>
        <item name="android:paddingTop">@dimen/main_cell_topic_margin_TB</item>
        <item name="android:paddingBottom">@null</item>
        <item name="android:background">@drawable/topic_border_shape</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--custom style-->

    <style name="MyAppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyCustomActionBar</item>
        <item name="actionBarStyle">@style/MyCustomActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyCustomActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/MyCustomActionBar_Text</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="MyAppBaseTheme_normal" parent="Theme.AppCompat">
        <item name="android:actionBarStyle">@style/MyCustomActionBar_normal</item>
        <item name="actionBarStyle">@style/MyCustomActionBar_normal</item>
    </style>

    <style name="MyCustomActionBar_normal" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/MyCustomActionBar_Text</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="MyCustomActionBar_transparent" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/MyCustomActionBar_Text</item>
    </style>

    <style name="MyCustomActionBar_Text" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MyAppBaseTheme_NoTitle" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
    </style>



    <!-- cc video -->
    <style name="adTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@color/ad_color</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/navpage</item>
    </style>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="FullBleedTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="ActionBarTheme" parent="android:Theme.Holo.Light.DarkActionBar">

        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/MyCustomActionBar</item>
    </style>

    <!--     <style name="ActionBarStyle" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
            <item name="android:background">@color/actionbar_bg</item>
        </style> -->

    <style name="ActionBarTheme_transparent" parent="android:Theme.Holo.Light.DarkActionBar">

        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/MyCustomActionBar_transparent</item>
    </style>

</resources>
