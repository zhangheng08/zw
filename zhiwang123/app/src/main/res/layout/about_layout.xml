<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/zw_white">

    <ImageView
        android:id="@+id/top_pic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:src="@drawable/zhiwang_pic"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/top_pic"
        android:layout_marginTop="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textColor="#aaa"
            android:textSize="14sp"
            android:text="版本号：1.0.0.0"/>

        <TextView
            android:id="@+id/v_check_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#777"
            android:textSize="14sp"
            android:gravity="right|center_vertical"
            android:text="检查更新 >"/>

        <ProgressBar
            android:id="@+id/v_check_pro"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/v_check_btn"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/zw_gray_main_cell_sub_txt"
        android:textSize="11sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="CopyRight 2017 智网 版权所有"/>

</RelativeLayout>
