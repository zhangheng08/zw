<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zw_trans_h"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:background="@color/zw_white">

        <RelativeLayout
            android:id="@+id/share_v_content_t"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/share_title_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/zw_gray_main_cell_txt"
                android:layout_centerInParent="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:text="@string/share_info_str"/>

            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/share_title_str"
                android:background="@color/zw_gray_login_sep"/>

            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/share_title_str"
                android:background="@color/zw_gray_login_sep"/>

            <TextView
                android:id="@+id/share_close_btn"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:drawableRight="@drawable/close_gray"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/share_v_share_m"
            android:layout_below="@id/share_v_content_t"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/share_btn_to_wxcs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="30dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/share_wxcs"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/zw_gray_main_cell_txt"
                        android:textSize="12sp"
                        android:gravity="center_horizontal|bottom"
                        android:text="@string/share_wxcs_str"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/share_btn_to_wxtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="30dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/share_wxtl"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/zw_gray_main_cell_txt"
                        android:textSize="12sp"
                        android:gravity="center_horizontal|bottom"
                        android:text="@string/share_wxtl_str"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/share_btn_to_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="30dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/share_qq"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/zw_gray_main_cell_txt"
                        android:textSize="12sp"
                        android:gravity="center_horizontal|bottom"
                        android:text="@string/share_qq_str"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/share_btn_to_sina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/share_sina"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/zw_gray_main_cell_txt"
                        android:textSize="12sp"
                        android:gravity="center_horizontal|bottom"
                        android:text="@string/share_sina_str"/>

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>