<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/zw_gray_main_bg">

    <LinearLayout
        android:id="@+id/local_item_reuse_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inner_cell_height"
        android:orientation="horizontal"
        android:weightSum="10"
        android:baselineAligned="false"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_v_margin"
        android:layout_marginBottom="@dimen/activity_v_margin">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/local_item_left_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:padding="1px"
                android:layout_centerInParent="true"
                android:background="@drawable/img_border_shape"
                android:src="@null"/>

            <com.zhiwang123.mobile.phone.widget.SectorProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:padding="1px"
                android:layout_centerInParent="true"
                android:src="@drawable/loading_c"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/main_cell_padding"
            android:layout_weight="7">

            <TextView
                android:id="@+id/local_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/main_cell_text_style"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="离线视频"/>

            <TextView
                android:id="@+id/local_item_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                style="@style/main_cell_subtext_style"
                android:maxLines="1"
                android:layout_marginTop="3dp"
                android:text="观看状态"/>



        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.2px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="@color/zw_gray_login_sep"/>

</RelativeLayout>
