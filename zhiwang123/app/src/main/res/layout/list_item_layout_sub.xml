<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zw_white"
    android:weightSum="10"
    android:baselineAligned="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/sub_cell_imgv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@null"
            android:background="@color/zw_gray_main_bottom_bar_sep"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/sub_cell_new"
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:textColor="@null"
            android:textSize="12sp"
            android:visibility="invisible"
            android:gravity="center"
            android:text="已更新10集"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:layout_weight="2.5">

        <TextView
            android:id="@+id/sub_cell_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/zw_gray_list_txt"
            android:textSize="14sp"
            android:singleLine="true"
            android:paddingRight="5dp"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:text="主标题"/>

        <TextView
            android:id="@+id/sub_cell_sec_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="13sp"
            android:gravity="left|center_vertical"
            android:layout_weight="0"
            android:singleLine="true"
            android:ellipsize="end"
            android:visibility="gone"
            android:textColor="@color/zw_gray_list_txt"
            android:text="内容简介"/>

    </LinearLayout>

</LinearLayout>